<Configuration status="INFO">
    <Appenders>
        <RollingFile
            name="rollingFile"
            fileName="/home/maverick/Ceir/logs.log"
            filePattern="/home/maverick/Ceir/logs-%d{dd-MMM}.log"
            ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} :%L - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="rollingFile" />
        </Root>
    </Loggers>
</Configuration>
